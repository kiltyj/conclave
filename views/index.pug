doctype html
html(lang="en")
  head
    title= title
    link(rel='stylesheet' href='css/style.css')
    link(rel='shortcut icon' href='assets/img/favicon.ico' type='image/x-icon')
    script(src='https://cjrtnc.leaningtech.com/2.3/loader.js')
  body
    #conclave.hide
      .editor
        .header
          .header-left
            a.link(id='saveLink' target="_blank") Save File
            a.link(id='sharingLink' target="_blank") Share Link
            span(id="sharingLinkInput" class="aside disappear")
            a.link(id='copyLink' target="_blank") Copy Link
            .copyStatus Copied!
          .header-right
            a.link(id='acknowledgements' target='_blank') Acknowledgements
        .source
          textarea()
      .output
        .header
          p#peerId Collaborators:
        .outputImage
          img(id='renderImage' src='assets/img/initializing-plantuml.png')
    .loading
